{
    "presets": [
        [
            "@babel/preset-react",
            {
                "runtime": "automatic"
            }
        ],
        "@babel/preset-typescript"
    ],
    "plugins": [
        "react-loadable/babel",
        [
            "babel-plugin-named-asset-import",
            {
                "loaderMap": {
                    "svg": {
                        "ReactComponent": "@svgr/webpack?-svgo,+titleProp,+ref![path]"
                    }
                }
            }
        ]
    ],
    "env": {
        "cjs": {
            "presets": [
                "@babel/preset-env",
                [
                    "@babel/preset-react",
                    {
                        "runtime": "automatic"
                    }
                ],
                "@babel/preset-typescript"
            ]
        },
        "test": {
            "presets": [
                [
                    "@babel/preset-env",
                    {
                        "targets": {
                            "node": "18"
                        },
                        "modules": false
                    }
                ],
                [
                    "@babel/preset-typescript",
                    {
                        "tsconfig": "./packages/tsconfig-test.json",
                        "targets": {
                            "node": "18"
                        },
                        "modules": false
                    }
                ],
                [
                    "@babel/preset-react",
                    {
                        "runtime": "automatic"
                    }
                ]
            ],
            "plugins": [
                "./babelImportDefaultPlugin.cjs"
            ]
        },
        "node": {
            "presets": [
                [
                    "@babel/preset-env",
                    {
                        "targets": {
                            "node": "18"
                        },
                        "modules": false
                    }
                ],
                [
                    "@babel/preset-typescript"
                ],
                [
                    "@babel/preset-react",
                    {
                        "runtime": "automatic"
                    }
                ]
            ]
        }
    }
}
