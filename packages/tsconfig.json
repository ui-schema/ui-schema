{
    "compilerOptions": {
        "module": "ES2022",
        "target": "ES2021",
        "jsx": "react-jsx",
        "removeComments": false,
        "moduleResolution": "Node10",
        "forceConsistentCasingInFileNames": true,
        "strict": true,
        "experimentalDecorators": true,
        "baseUrl": "./",
        "allowSyntheticDefaultImports": true,
        "noErrorTruncation": true,
        "allowJs": true,
        "declaration": true,
        "resolveJsonModule": true,
        "skipLibCheck": true,
        "noUnusedLocals": true,
        "noImplicitAny": false,
        "noUnusedParameters": true,
        "strictNullChecks": true,
        "paths": {
            "@ui-schema/ds-bootstrap": [
                "ds-bootstrap/src/index.ts"
            ],
            "@ui-schema/ds-bootstrap/*": [
                "ds-bootstrap/src/*/index.ts"
            ],
            "@ui-schema/ds-material": [
                "ds-material/src/index.ts"
            ],
            "@ui-schema/ds-material/*": [
                "ds-material/src/*/index.ts"
            ],
            "@ui-schema/kit-dnd": [
                "kit-dnd/src/index.ts"
            ],
            "@ui-schema/kit-dnd/*": [
                "kit-dnd/src/*/index.ts"
            ],
            "@ui-schema/material-pickers": [
                "material-pickers/src/index.ts"
            ],
            "@ui-schema/material-pickers/*": [
                "material-pickers/src/*/index.ts"
            ],
            "@ui-schema/material-dnd": [
                "material-dnd/src/index.ts"
            ],
            "@ui-schema/material-dnd/*": [
                "material-dnd/src/*/index.ts"
            ],
            "@ui-schema/ui-schema": [
                "ui-schema/src/index.ts"
            ],
            "@ui-schema/ui-schema/*": [
                "ui-schema/src/*/index.ts"
            ],
            "@ui-schema/react": [
                "react/src/index.ts"
            ],
            "@ui-schema/react/*": [
                "react/src/*/index.ts"
            ],
            "@ui-schema/react-json-schema": [
                "react-json-schema/src/index.ts"
            ],
            "@ui-schema/react-json-schema/*": [
                "react-json-schema/src/*/index.ts"
            ],
            "@ui-schema/json-pointer": [
                "json-pointer/src/index.ts"
            ],
            "@ui-schema/json-pointer/*": [
                "json-pointer/src/*/index.ts"
            ],
            "@ui-schema/json-schema": [
                "json-schema/src/index.ts"
            ],
            "@ui-schema/json-schema/*": [
                "json-schema/src/*/index.ts"
            ],
            "@ui-schema/pro": [
                "pro/src/index.ts"
            ],
            "@ui-schema/pro/*": [
                "pro/src/*/index.ts"
            ],
            "@ui-schema/dictionary": [
                "dictionary/src/index.ts"
            ],
            "@ui-schema/dictionary/*": [
                "dictionary/src/*/index.ts"
            ]
        }
    },
    "exclude": [
        "**/build/",
        "**/node_modules/"
    ]
}
