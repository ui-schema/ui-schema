{
    "name": "@ui-schema/system",
    "version": "0.5.0-alpha.0",
    "description": "System lib for schema based Validators and UI/Form generators",
    "homepage": "https://ui-schema.bemit.codes",
    "author": "Michael Becker <michael@bemit.codes>",
    "license": "MIT",
    "keywords": [
        "ui-schema",
        "json-schema",
        "design-system",
        "ui-library",
        "ux",
        "ui",
        "form-generator",
        "design-system"
    ],
    "repository": {
        "type": "git",
        "url": "https://github.com/ui-schema/ui-schema.git",
        "directory": "packages/system"
    },
    "bugs": {
        "url": "https://github.com/ui-schema/ui-schema/issues"
    },
    "type": "module",
    "main": "./index.cjs",
    "module": "./index.js",
    "types": "./index.d.ts",
    "exports": {
        ".": {
            "types": "./index.d.ts",
            "import": "./index.js",
            "require": "./index.cjs"
        },
        "./*": {
            "types": "./*/index.d.ts",
            "import": "./*/index.js",
            "require": "./*/index.cjs"
        }
    },
    "sideEffects": false,
    "scripts": {
        "dtsgen": "tsc --declaration --emitDeclarationOnly --pretty --rootDir ../ && node ../../tools/merge-dirs.js build/dts/system/src build && rimraf build/dts && rimraf --glob build/**/*.test.* build/**/*.mock.*",
        "__release": "cp package.json build/ && cp package-lock.json build/ && cp README.md build/ && npm publish build"
    },
    "devDependencies": {
        "immutable": "^5.0.0"
    },
    "peerDependencies": {
        "immutable": "^4.0.0 || ^5.0.0"
    },
    "publishConfig": {
        "tag": "next",
        "access": "public"
    }
}
