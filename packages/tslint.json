{
    "defaultSeverity": "error",
    "extends": [
        "dtslint/dtslint.json"
    ],
    "jsRules": {},
    "rules": {
        "deprecation": true,
        "no-boolean-literal-compare": true,
        "no-empty-interface": true,
        "no-unnecessary-callback-wrapper": true,
        "no-unnecessary-generics": true,
        "indent": [
            true,
            "spaces",
            4
        ],
        "trailing-comma": [
            true,
            {
                "singleline": "never",
                "multiline": {
                    "objects": "never",
                    "arrays": "never",
                    "functions": "never",
                    "typeLiterals": "never",
                    "exports": "never",
                    "imports": "never"
                }
            }
        ],
        "no-redundant-jsdoc": false,
        "ban-types": false,
        "semicolon": [
            true,
            "never",
            "ignore-bound-class-methods"
        ]
    }
}
