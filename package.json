{
    "name": "@ui-schema/dev",
    "version": "0.5.0-alpha",
    "description": "",
    "private": true,
    "type": "module",
    "scripts": {
        "start": "npm run clean-dist && npm run serve -- demoWeb",
        "docs": "npm run serve -- docs",
        "serve": "cross-env NODE_OPTIONS='--max-old-space-size=8192' NODE_ENV=development node packerConfig.js --serve",
        "serve-server": "cross-env NODE_OPTIONS='--max-old-space-size=8192' NODE_ENV=development tsx --watch ./packages/demo-server/src/server.ts",
        "prebuild": "npm run clean-dist && npm run static-gen",
        "build_": "npm run build-all && npm run dtsgen",
        "build": "npm run build-babel && npm run dtsgen && npm run build-webpack && npm run build-backend",
        "build-all": "cross-env NODE_ENV=production CI=true node packerConfig.js --build --babel --webpack --backend",
        "build-babel": "cross-env NODE_ENV=production CI=true node packerConfig.js --build --babel",
        "build-backend": "cross-env NODE_ENV=production CI=true node packerConfig.js --build --backend",
        "build-webpack": "cross-env NODE_ENV=production CI=true NODE_OPTIONS=\"--max-old-space-size=8192\" node packerConfig.js --build --webpack",
        "static-gen": "npm run sitemaps && npm run doc-gen && npm run page-index",
        "sitemaps": "lerna run sitemap",
        "doc-gen": "lerna run doc-gen",
        "page-index": "lerna run page-index",
        "dtsgen": "lerna run dtsgen",
        "tscheck": "lerna run tscheck",
        "check": "npm run lint && npm run tscheck && npm run test",
        "profile": "cross-env NODE_OPTIONS='--max-old-space-size=4096' NODE_ENV=production node packerConfig.js --build --profile",
        "clean": "npm run clean-dist && lerna clean -y",
        "clean-dist": "node packerConfig.js --clean",
        "clean-lock": "rimraf --glob packages/*/package-lock.json",
        "bootstrap": "lerna bootstrap --force-local -- --legacy-peer-deps",
        "link": "lerna link --force-local",
        "lint": "cross-env NODE_ENV=test NODE_OPTIONS=\"--max-old-space-size=8192 --no-deprecation --experimental-vm-modules --unhandled-rejections=strict\" eslint -c=.eslintrc --ext=.tsx,.ts,.js,.jsx --max-warnings=0 'packages'",
        "test": "cross-env NO_TYPE_CHECK=yes NODE_ENV=test NODE_OPTIONS=\"--max-old-space-size=8192 --experimental-vm-modules\" jest -c=\"jest.config.ts\"",
        "jest-clear": "jest -c=\"jest.config.ts\" --detectOpenHandles --forceExit --clearCache",
        "tdd": "cross-env NO_TYPE_CHECK=yes npm test -- --watch --coverage=false",
        "__release": "lerna run release --stream",
        "validate": "cross-env NODE_ENV=development tsx ./packages/demo-server/src/cli.js validate",
        "pointer": "cross-env NODE_ENV=development tsx ./packages/demo-server/src/cli.js pointer",
        "sloc": "node ./sloc.js",
        "release": "lerna publish from-package --contents build --no-git-reset"
    },
    "author": "Michael Becker, https://i-am-digital.eu",
    "license": "MIT",
    "devDependencies": {
        "@jest/types": "^29.6.3",
        "@types/react": "^18.0",
        "babel-plugin-named-asset-import": "^0.3.8",
        "babel-plugin-replace-import-extension": "^1.1.4",
        "cross-env": "^7.0.3",
        "eslint-plugin-jsx-a11y": "^6.7.1",
        "eslint-plugin-react-hooks": "^4.6.0",
        "jest-environment-jsdom": "^29.0.2",
        "@testing-library/react": "^16.0.1",
        "@testing-library/dom": "^10.0.0",
        "lerna": "^8.2.2",
        "lerna-packer": "0.10.3",
        "react": "^18.0",
        "react-dom": "^18.0",
        "nodemon": "^3.1.7",
        "sloc": "^0.3.2",
        "ts-node": "^10.9.1",
        "tsx": "^4.19.2",
        "typescript": "~5.3.3"
    },
    "workspaces": [
        "packages/*"
    ]
}
